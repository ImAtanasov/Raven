<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerInParent="true"
    android:id="@+id/my_relative">



    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:background="@color/SpaceCherry2"
        android:id="@+id/seekLayout">

        <SeekBar
            android:id="@+id/seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:progressDrawable="@drawable/seek_progress"
            android:thumb="@drawable/square_progress" />

    </RelativeLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_play"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="0dp"

        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitXY"
        app:backgroundTint="@color/white"
        app:fabCustomSize="90dp"
        app:maxImageSize="70dp"
        app:srcCompat="@drawable/play_logo3" />

    <TextView
        android:id="@+id/timeView"
        android:layout_width="17dp"
        android:layout_height="18dp"
        android:layout_below="@+id/seekLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="394dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp"
        android:text="0:00"
        android:fontFamily="@font/axiforma_black"
        android:textStyle="bold"
        android:textColor="@color/black" />

</RelativeLayout>